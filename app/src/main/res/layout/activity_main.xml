<?xml version="1.0" encoding="utf-8"?>




<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
            android:layout_height="wrap_content"
        tools:context=".MainActivity"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">


    <ImageView
            android:layout_width="70dp"
            android:layout_height="64dp"
            tools:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageViewfoto"
            android:layout_weight="0"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp" app:srcCompat="@drawable/ic_home_post_pago_cambio_numero"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="@{()->clase.cambioNumero()}"

    />


    <ImageView
            android:layout_width="70dp"
            android:layout_height="64dp"
            tools:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageViewfoto1"
            android:layout_weight="0"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp" app:srcCompat="@drawable/ic_home_post_pago_datos_compartidos"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="@{()->clase.datosCompartidos()}"

    />

    <ImageView
            android:layout_width="70dp"
            android:layout_height="64dp"
            tools:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageViewfoto2"
            android:layout_weight="0"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp" app:srcCompat="@drawable/ic_home_post_pago_familia_amigos"
            android:clickable="true"
            android:onClick="@{()->clase.familiaAmigos()}"

    />



</LinearLayout>
